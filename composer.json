{
    "name": "fwtest/framework",
    "description": "Mini framework MVC en PHP avec autoload PSR-4",
    "type": "project",
    "autoload": {
        "psr-4": {
            "FwTest\\Core\\": "app/",
            "FwTest\\Controller\\": "controllers/",
            "FwTest\\Model\\": "models/",
            "FwTest\\Classes\\": "classes/"
        }
    },
    "require": {
        "php": ">=8.2",
        "vlucas/phpdotenv": "^5.6"
    },
    "scripts": {
        "post-install-cmd": [
            "composer dump-autoload -o"
        ],
        "post-update-cmd": [
            "composer dump-autoload -o"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
